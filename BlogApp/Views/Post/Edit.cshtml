@using System.Security.Claims
@model CreatePostViewModel

<div class="container">
    <div class="bg-white rounded-2 p-4">
        <div class="card-body">
            <h3 class="card-title text-center mb-4">Post Ekle</h3>
            <form action="Edit" method="post" novalidate>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="PostId" value="@Model.PostId" />
                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-bold">Title</label>
                    <input type="text" class="form-control" id="Title" asp-for="Title" aria-describedby="emailHelp">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Content" class="form-label fw-bold">Content</label>
                    <textarea type="text" class="form-control" id="Content" asp-for="Content"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Decription" class="form-label fw-bold">Decription</label>
                    <input type="text" class="form-control" id="Decription" asp-for="Decription" aria-describedby="emailHelp">
                    <span asp-validation-for="Decription" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="url" class="form-label fw-bold">url</label>
                    <textarea type="text" class="form-control" id="url" asp-for="url"></textarea>
                    <span asp-validation-for="url" class="text-danger"></span>
                </div>

                @if(User.FindFirstValue(ClaimTypes.Role) == "admin")
                {
                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="IsActive" />
                        <label class="form-check-label fw-bold" asp-for="IsActive">Aktif</label>
                    </div>
                }
                <button type="submit" class="btn btn-primary">Düzenle</button>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/7.6.0/tinymce.min.js" integrity="sha512-/4EpSbZW47rO/cUIb0AMRs/xWwE8pyOLf8eiDWQ6sQash5RP1Cl8Zi2aqa4QEufjeqnzTK8CLZWX7J5ZjLcc1Q==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        tinymce.init({
            selector:'#Content'
        });
    </script>
}